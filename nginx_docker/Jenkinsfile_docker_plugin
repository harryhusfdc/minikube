pipeline{
    environment{
        registry = "harryhu/simple-nginx:0.0.1"
        registryCredential = "MyDockerHubAccount"
        dockerImage = ""
    }
    agent any
    stages{
        stage("Create Image"){
            steps{
                dir("${env.WORKSPACE}"){
                    sh """
                        whoami
                        pwd
                        sudo docker build -f nginx_docker/Dockerfile -t harryhu/simple-nginx:0.0.1 nginx_docker
                    """
                }
            }
        }
        stage("Push image"){
            steps{
                script{
                    docker.withRegistry("", registryCredential){
                        dockerImage.push()
                    }
                }
            }
        }
        stage("Cleanup"){
            steps{
                sh "docker rmi $registry"
            }
        }
    }
}