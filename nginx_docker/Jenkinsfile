pipeline{
    agent any
    stages{
        stage('Create Image'){
            steps{
                echo "Creating image"
                echo ${env.WORKSPACE}
                dir("${env.WORKSPACE}/Example1"){
                    sh """
                        pwd
                        docker build -f nginx_docker/Dockersfile -t harryhu/simple-nginx:0.0.1 nginx_docker
                        docker push harryhu/simple-nginx:0.0.1
                    """
                }
            }
        }
    }
}