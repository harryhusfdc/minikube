pipeline{
    agent any
    stages{
        stage('Create Image'){
            steps{
                echo "Creating image"
                echo "${env.WORKSPACE}"
                dir("${env.WORKSPACE}"){
                    sh """
                        whoami
                        pwd
                        sudo -i docker build -f nginx_docker/Dockerfile -t harryhu/simple-nginx:0.0.1 nginx_docker
                        sudo -i docker push harryhu/simple-nginx:0.0.1
                    """
                }
            }
        }
    }
}